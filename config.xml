<?xml version="1.0" encoding="UTF-8" ?>

    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.example"
        versionCode = "10"
        version     = "1.0.1" >

    <name>Ciné Plus</name>

    <description>
        Trouver facilement les horaires des séances des films que vous voulez voir.
    </description>

    <author href="http://www.damienduhamel.fr" email="d.damien@live.fr">
        Damien Duhamel
    </author>

    <preference name="permissions" value="none"/>

    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="android-minSdkVersion" value="11" />
    <preference name="android-installLocation" value="auto" />

    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
    <gap:plugin name="org.apache.cordova.dialogs" />

    <icon src="icon.png" />
    <icon src="res/icon/android/res/drawable-ldpi/Icon.png" platform="android" width="36" height="36" density="ldpi" />
    <icon src="res/icon/android/res/drawable-mdpi/Icon.png" platform="android" width="48" height="48" density="mdpi" />
    <icon src="res/icon/android/res/drawable-hdpi/Icon.png" platform="android" width="72" height="72" density="hdpi" />
    <icon src="res/icon/android/res/drawable-xhdpi/Icon.png" platform="android" width="96" height="96" density="xhdpi" />

    <gap:splash src="res/screen/android/screen-ldpi-portrait.png" gap:platform="android" gap:qualifier="port-ldpi" />
    <gap:splash src="res/screen/android/screen-mdpi-portrait.png" gap:platform="android" gap:qualifier="port-mdpi" />
    <gap:splash src="res/screen/android/screen-hdpi-portrait.png" gap:platform="android" gap:qualifier="port-hdpi" />
    <gap:splash src="res/screen/android/screen-xhdpi-portrait.png" gap:platform="android" gap:qualifier="port-xhdpi" />

    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="1000" />

    <access origin="*"/>

</widget>